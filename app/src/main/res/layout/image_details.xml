<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_gravity="right"
    tools:context=".Principal_Activity">


    <include
        android:id="@+id/toolbar_back"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="55dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_vertical|center"
                android:orientation="vertical">

                <com.example.julio.photogo.ResizableImageView
                    android:id="@+id/setimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/cast_libraries_material_featurehighlight_text_header_color"

                    android:src="@color/cast_libraries_material_featurehighlight_text_body_color" />

                <Button
                    android:id="@+id/trytoconnectbtn"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:background="@drawable/recharger_progress" />

                <ProgressBar
                    android:id="@+id/trytoconnect"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateDrawable="@drawable/recharger_progress" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/setcoortxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/compass"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/list_divider_intro" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/send_map"
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/radious_button3"
                        android:drawableLeft="@drawable/mapsedit"
                        android:gravity="right|center_vertical"
                        android:text="  Maps    " />

                    <Space
                        android:layout_width="23dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/send_waze"
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/radious_button3"
                        android:drawableLeft="@drawable/wazeedit"
                        android:gravity="right|fill_vertical"
                        android:text="  waze    " />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/setaddresstxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/address"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="2" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="2"
                    android:background="@drawable/list_divider_intro" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/setzone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/zone"
                    android:gravity="right|center"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="2"
                    android:background="@drawable/list_divider_intro" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/setcategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/category"
                    android:gravity="right|center"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="2"
                    android:background="@drawable/list_divider_intro" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/coment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/details"
                    android:gravity="right|center"
                    android:inputType="textMultiLine"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="2" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="2"
                    android:background="@drawable/list_divider_intro" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/setby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/user"
                    android:gravity="right|center"
                    android:text="TextView"
                    android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/date_logo"
                    android:gravity="right|center"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="2"
                    android:background="@drawable/list_divider_intro" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progresbartoUser"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="20dp" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="#FFFFFF"
                    android:padding="2dp"
                    app:srcCompat="@drawable/delete" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>